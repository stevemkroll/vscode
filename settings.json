{
    // Editor
    "editor.accessibilitySupport": "off",
    "editor.cursorStyle": "block",
    "editor.dragAndDrop": false,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.loop": false,
    "editor.folding": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.glyphMargin": false,
    "editor.lightbulb.enabled": false,
    "editor.links": false,
    "editor.minimap.enabled": false,
    "editor.multiCursorPaste": "full",
    "editor.occurrencesHighlight": false,
    "editor.roundedSelection": true,
    "editor.scrollBeyondLastColumn": 0,
    "editor.scrollBeyondLastLine": false,
    "editor.stablePeek": true,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    // Workbench
    "workbench.colorTheme": "Monokai",
    "workbench.commandPalette.history": 0,
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.restoreViewState": false,
    "workbench.editor.tabCloseButton": "left",
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    // Files
    "files.hotExit": "off",
    "files.restoreUndoStack": false,
    // Explorer
    "explorer.compactFolders": false,
    "explorer.enableDragAndDrop": false,
    "explorer.incrementalNaming": "simple",
    "explorer.sortOrder": "type",
    // Search
    "search.followSymlinks": false,
    "search.sortOrder": "type",
    "keyboard.touchbar.enabled": false,
    // Updates
    "update.mode": "manual",
    "update.showReleaseNotes": false,
    // Extensions
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    // Output
    "output.smartScroll.enabled": false,
    // Terminal
    "terminal.explorerKind": "integrated",
    "terminal.integrated.confirmOnExit": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    // Tasks
    "task.autoDetect": "off",
    "task.quickOpen.history": 0,
    "task.quickOpen.skip": true,
    "task.saveBeforeRun": "prompt",
    // Problems
    "problems.autoReveal": true,
    "problems.showCurrentInStatus": true,
    // Breadcrumb 
    "breadcrumbs.enabled": false,
    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Outline
    "outline.icons": false,
    "outline.problems.enabled": false,
    // Merge-Conflict
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "merge-conflict.codeLens.enabled": true,
    "merge-conflict.decorators.enabled": true,
    "merge-conflict.diffViewPosition": "Beside",
}
